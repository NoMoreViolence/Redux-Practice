{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "pretty": true // 에러 메시지를 예쁘게 설정
  },
  "no-shadowed-variable": false,
  "array-type": false,
  "rules": {
    "no-console": [
      true,
      "error",
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "interface-name": false,
    "ordered-imports": false,
    "interface-over-type-literal": false
  },
  "compress": { 
    "drop_console": true
 },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
